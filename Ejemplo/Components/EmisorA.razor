@inject Ejemplo.Services.MediatorService Mediador

<h5>Emisor A</h5>

<input class="form-control" @bind="mensaje" placeholder="Mensaje desde A" />
<button class="btn btn-primary mt-2" @onclick="Enviar">Enviar desde A</button>

@code {
    private string mensaje = "";

    void Enviar()
    {
        if (!string.IsNullOrWhiteSpace(mensaje))
        {
            Mediador.Enviar($"[A] {mensaje}");
            mensaje = "";
        }
    }
}
