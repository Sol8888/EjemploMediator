@inject MediatorService Mediador

<h3>Notificador</h3>

<div class="mb-3">
    <input type="text" class="form-control" @bind="mensaje" placeholder="Escribe un mensaje..." />
</div>

<button class="btn btn-success" @onclick="EnviarMensaje">Enviar Mensaje</button>

@code {
    private string mensaje = string.Empty;

    void EnviarMensaje()
    {
        if (!string.IsNullOrWhiteSpace(mensaje))
        {
            Mediador.Notificar(mensaje);
            mensaje = string.Empty;
        }
    }
}
